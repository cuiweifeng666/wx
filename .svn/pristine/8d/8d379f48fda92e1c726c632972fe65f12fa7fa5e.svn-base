/**index.wxss**/
page {
  background:#FF5B69;
}
button::after{
border: none;
padding: none;
outline: none;
margin: none;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 150px;
}
.tools{
  position:fixed;
  width:100%;
  background: none;
  text-align: center;
  bottom: 30rpx;
  z-index: 2;
}
.tools .name{
  display:inline-block;
  width:318rpx;
  margin-top:0rpx;
  background:#fff;
  margin-bottom: 40rpx;
  height:95rpx;
  line-height: 100rpx;
  border-radius:95rpx;
  text-align: center;
  line-height:95rpx;
  color:#FF5B69;
  
}
 .tools  .detail  {
    display:block;
  padding: 0 60rpx;
  margin-bottom:40rpx;
  background:none;
  height:95rpx;
  font-size:28rpx;
  border-radius:95rpx;
  text-align: center;
  line-height:42rpx;
  color:#fff;
 }
.tools  .over {
  background:#ffa;
  color:#fff;
}
.text_group {
  margin:60rpx;
  margin-top:80rpx;
  background:none;
  height:130rpx;
  color:#fff;
  font-size: 30rpx;
  border-radius:6rpx;
  opacity:1;
  display: flex;
  position: relative;
  justify-content:space-around;
  flex-flow:nowrap row;
}
.mask  {
  position: absolute;
  top:270rpx;
  margin:50rpx;
  background:#fff;
  width: 650rpx;
  height:200rpx;
  border-radius:12rpx; 
  opacity: .3;
}

.text_group navigator, .text_group .non{
  display:block;
  color:#fff;
  border: none;
  font-size: 30rpx;
  background:none;
  margin: 0;
  padding: 0;
  outline: none;
}
.text_group navigator image, .text_group .non image{
  display:block;
  height:100rpx;
  width:100rpx;
  border-radius: 50%;
  background:#fff;
  line-height:100rpx;
  color:#000;
  margin:0;
  padding:none;
  border: none;
  outline: none;
}
.text_group navigator text{
  display:block;
  height:100rpx;
  width:100rpx;
  line-height:76rpx;

}

.text_group view {
  display:block;
  background:none;
  height:100rpx;
  line-height:100rpx;
  color:#000;
}
.gray {
   opacity:.4;
}
.bottom {
  position: absolute;
  bottom:0;
  width:100%;
  height:240rpx;
}
.cs_button{

}
.clearNotice {
  position: fixed;
  top: 0rpx;
  left:0;
  width: 147rpx;
  height: 147rpx;
}
.title_pic {
  display:block;
   position: fixed;
   top:560rpx;
  margin-left: 137rpx;
  width: 476rpx;
  height: 60rpx;
}
.center_pic  {
  display:block;
   position: fixed;
   top:80rpx;
  margin-left: 125rpx;
  width: 500rpx;
  height: 429rpx;
}