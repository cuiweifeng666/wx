/* pages/common/roundnooption.wxss */
.number_box{ 
   padding:0 10rpx;
}
.number_box_h1{
    line-height: 1rem;
    color: #d70e07;
    font-size: .8rem;
    font-weight: bold;
    padding:.5rem 1rem;
    border-bottom:1rpx solid #e4e4e4;
}
.number_box_h1 span{
	display: inline-block;
    width: .1rem;
    height: .8rem;
    background: #d70e07;
    margin-right: .4rem;
}
 .number_box_h1 navigator{
    padding-right: 1.4rem;
    float: right;
}

.number_box_context{	
  height:33px;
	line-height:33px;  
  display:-webkit-box;
  padding:20rpx 0 0 40rpx;
}
.number_box_context view view{
	display:inline-block;     
	width:1.2rem;
	height:1.2rem;
	line-height:1.2rem;
	border-radius:3rem;
	background:#fff;
	color:#b9b9b9;
	border:1px solid #b9b9b9;
	text-align:center;
	margin-right:10rpx;
}

.number_choose_item_red{
	color:#fff!important;
	border:1px solid #d70e07!important;
	background:#d70e07!important;
}
.number_box_control{	
  width:100%;
  height:60rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;
  text-align:center;
}
.number_box_control button{
	width:5rem;
	height:1.5rem;
	line-height:1.5rem;
	border-radius:.3rem;
	color:#666;
	font-size:.8rem;
  display:inline-block;
  margin: 0 .25rem;
}
.number_box_footer{
  	line-height:23px;
	margin:.5rem 0;
  display:-webkit-box;
}

.number_box_footer text{
	color: #454545;
    font-size: .8rem;
    display: inline-block;
    width: 2.5rem;
}

.number_box_footer view view{
    display: inline-block;
    width: 1.2rem;
    height: 1.2rem;
    line-height: 1.2rem;
    border-radius: 3rem;
    background: #fff;
    color: #b9b9b9;
    border: 1px solid #b9b9b9;
    text-align: center;  
    margin-right:10rpx; 
}


