.head {
  height:120rpx;
  padding-left:30rpx;
  border-bottom:1rpx solid #e7e7e7;
}
.fr  {
  float:right;
}
.fl  {
  float:left;
}
.clearfix::after {
  content:'';
  display:block;
  clear:both;
}
.head .line {
  width:4rpx ;
  height:40rpx;
  background:#e8302e;
  margin-right:20rpx;
  margin-top:60rpx;
}
.head .text {
  width:150rpx ;
  height:40rpx;
  margin-right:40rpx;
  margin-top:60rpx;
  font-size:36rpx;
  line-height:40rpx;
  color:#e8302e;
  font-weight: bold;
}

.head .trend {
  width:300rpx ;
  height:40rpx;
  margin-right:70rpx;
  margin-top:60rpx;
  font-size:36rpx;
  text-align:right;
  line-height:40rpx;
}
.number_choose_item{
	height:33px;
	line-height:33px;  
  display:-webkit-box;
  padding:20rpx 0 0 40rpx;
}

.number_choose_item span{
	color:#b9b9b9;
	font-size:.8rem;
	display:inline-block; 
	width:1.4rem; 
  margin-right:20rpx;
}

.number_choose_item view view{                      
	display:inline-block;     
	width:1.2rem;
	height:1.2rem;
	line-height:1.2rem;
	border-radius:3rem;
	background:#fff;
	color:#b9b9b9;
	border:1px solid #b9b9b9;
	text-align:center;
	margin-right:10rpx;
}
.number_choose_item_red{
	color:#fff!important;
	border:1px solid #d70e07!important;
	background:#d70e07!important;
}
.allSelect {
  width:100%;
  height:60rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;
  text-align:center;
}
.allSelect .all{
  display:inline-block;
  margin-right:20rpx;
  width:200rpx;
  height:60rpx;
  border:6rpx solid #e7e7e7;
}
.allSelect .clear{
  display:inline-block;
  margin-right:20rpx;
  width:200rpx;
  height:60rpx;
  border:1rpx solid #e7e7e7;
}
