/* pages/fc3dfilter/fc3dfilter.wxss */
.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #777777;  
    text-align: center;  
    line-height: 80rpx;
    background-color:white;
}  
.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #777777;  
}  
.on{ color: #da7c0c;  
    border-bottom: 5rpx solid #da7c0c;
}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
/*.swiper-box view{  
    text-align: left;  
}*/

.number_choose_bd{
	background:#fff;	
  padding:10px 0;
	border:1px solid #e7e7e7;
	width:100%;
}

.number_choose_bd view{  
    text-align: center;  
}

.number_choose_list{
	padding:10px 0;
	border:1px solid #e7e7e7;
	width:100%;
}
/*选号*/
.number_choose_item{
	height:33px;
	line-height:33px;  
	padding:0 8px; 
  display:-webkit-box;
}

.number_choose_item span{
	color:#b9b9b9;
	font-size:.8rem;
	display:inline-block; 
	width:1.4rem; 
}

.number_choose_item view view{                      
	display:inline-block;     
	width:1.2rem;
	height:1.2rem;
	line-height:1.2rem;
	border-radius:3rem;
	background:#fff;
	color:#b9b9b9;
	border:1px solid #b9b9b9;
	text-align:center;
	margin:0 .10rem;  
}
.number_choose_item_red{
	color:#fff!important;
	border:1px solid #d70e07!important;
	background:#d70e07!important;
}

/*全选，反选等按钮样式*/
.number_choose_button{
	display:-webkit-box;
	-webkit-box-pack:center;
	margin-top:.5rem;
  display:-moz-box;
  -moz-box-pack:center;
  text-align:center;
  width:100%;
  height:33px;
	line-height:33px;  
	padding:0 8px; 
  display:-webkit-box;
}
.number_choose_button_item{
	display:-webkit-box;
	margin:0 .5rem;
	height:1.5rem;
	line-height:1.5rem;
    display:-moz-box;
}
.number_choose_button_item image{
	width:1.5rem;
	height:1.5rem;
}
.number_choose_button_item view{
	width:2.5rem;
	height:1.4rem;
	line-height:1.4rem;
	background:#fff;
	font-size:.8rem;
	color:#b9b9b9;
	border:1px solid #b9b9b9;
	text-align:center;
	margin-left:-1px;
}

/*过滤条件*/
.content_filter{
	margin:.5rem;
}
.content_filter_h1{
	border-bottom: 1px solid #eaeaea;
    line-height: 1rem;
    color: #273648;
    font-size: .8rem;
    font-weight: bold;
    padding-bottom:.5rem;  
    text-align: left;     
}
.content_filter_h1_suff
{
  display: inline-block;
    width: .1rem;
    height: .8rem;
    background: #273648;
    margin-right: .4rem; 
}

.content_filter_li{
	margin:.5rem 0;
}

.content_filter_li_item{
	padding:.3rem 0;
	width:20%;
	text-align:center;
	font-size:.8rem;
	border:1px solid #e8e8e8;
	border-radius:.3rem;
	color:#666;
	margin:0 .17rem;
	display:inline-block;
	background:#fff;
}

/*过滤结果*/
.filter_result{
	margin:.8rem;
}
.filter_result_h1{
	border-bottom: 1px solid #eaeaea;
    line-height: 1rem;
    color: #273648;
    font-size: .8rem;
    font-weight: bold;
    padding-bottom:.5rem;
    display: flex;  
    flex-direction: row;  
}
.filter_result_h1_suff{
	display: inline-block;
    width: .1rem;
    height: .8rem;
    background: #273648;
    margin-right: .4rem;
}
.filter_result_h1_suff2{
	font-size:.6rem;
	color:#d6d6d6;
	font-weight:normal;
  display: flex;  
  flex-direction: row;  
}

.filter_result_h1_suff2_first{
	font-size:.6rem;
	color:#2b2ed9;
	font-style:normal;
}
.filter_result_h1_suff2_last{
	font-size:.6rem;
	color:#d70e07;
	font-style:normal;
}
.filter_result_context{
	border:1px solid #e7e7e7;
	background:#fff;
	height:7rem;
}
/*过滤按钮*/
.filter_btn{
	display:-webkit-box;
	-webkit-box-pack:center;
	-webkit-box-align:center;
    display:-moz-box;
    -moz-box-pack:center;
    -moz-box-align:center;
	position:fixed;
	bottom:0;
	height:3rem;
	width:100%;
	background:#e4e4e4;
	border-top:1px solid #ccc;
	z-index:1;  
    text-align:center;  
}

.filter_btn_item{
	padding:.1rem .5rem;
	display:inline-block;
	margin:.3rem .3rem;
	background:#fff;
	border:1px solid #e7e7e7;
	font-size:.8rem;
	color:#666;
} 

/*组选*/
.number_choose_li{
	display:-webkit-box;  
	-webkit-box-pack:center;    
	padding:1rem 0;
	border-bottom:1px solid #eaeaea;
}

.number_choose_li_item{
  padding:0 1rem;
	text-align:center;
	font-size:.8rem;
	border:1px solid #ffb9b7;
	border-radius:.3rem;
	color:#666;
	display:inline-block;
	width:3rem;
	line-height:1.5rem;
}
